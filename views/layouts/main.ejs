<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>

	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Roboto:300,400,500,700&amp;subset=cyrillic-ext" rel="stylesheet">
	<link rel="stylesheet" href="/css/main.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

</head>
<body>

	<div id="content">
		<%- include('components/header'); %>

		<%- include(content); %>

		<%- include('components/footer'); %>
	</div>

	<% if (typeof infoPopup !== 'undefined') { %>
		<%- include('components/popups/infoPopup'); %>
	<% } %>

	<% if (typeof phonePopup !== 'undefined' && url !== "/profile" && url !== "/profile/") { %>
		<%- include('components/popups/phonePopup'); %>
	<% } %>

	<% if (user && user.blocked) { %>
		<%- include('components/popups/blockPopup'); %>
	<% } %>

	<div class="to_top">
		<i class="fa fa-arrow-up" aria-hidden="true"></i>
	</div>

	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBRZ8vppC5iCnu6IWeEydvPNLGadmB5Jc&amp;libraries=places&amp;language=<%-locale%>"></script>
	<script src="/dist/bundle.js"></script>
	  
</body>
</html>
