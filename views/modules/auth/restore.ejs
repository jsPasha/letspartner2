<div class="auth_form form_block">
		
		<h1>Restore password</h1>
		<h3 class="center">Need an account? <a href="/signup">Signup</a></h3>

		<div class="row flx">

			<div class="col-md-6 col-md-offset-3">

				<form class="validation" action="/action/restore" method="post">

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<div class="form-group">
						<label>Email</label>
						<input required data-rule-email="1" type="text" class="form-control" name="email">
					</div>
					
					<div class="center">
						<input type="submit" value="Login" />
					</div>
				</form>
			</div>
		</div>

		<h3 class="center">Or go <a href="/">home</a>.</p>
		
</div>