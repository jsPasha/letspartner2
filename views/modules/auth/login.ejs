<div class="auth_form form_block">
		
		<h1>Login</h1>
		<h3 class="center">Need an account? <a href="/signup">Signup</a></h3>
		<!-- show any messages that come back with authentication -->
		<div class="row flx">

			<div class="col-md-6">

				<form class="validation" action="/action/login" method="post">
					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>
					<input type="hidden" name="hash" data-rule-email="1" value="<%- hashItem ? hashItem.hash : '' %>" />
					<div class="form-group">
						<label>Email</label>
						<input required type="text" class="form-control" name="email" value="<%- hashItem ? hashItem.email : '' %>">
					</div>
					<div class="form-group">
						<label>Password <a href="/<%=locale%>/restore">Forgot password</a></label>
						<input required type="password" class="form-control" name="password">
					</div>
					<div class="center">
						<input type="submit" value="Login" />
					</div>
				</form>
			</div>

			<div class="col-md-6">
				<div class="soc_buttons_wrap">
					<a class="soc_buttons google" href="/action/auth/google<%- hashItem ? `?q=${hashItem.hash}` : '' %>">
						<img src="/img/google-plus.svg" />
						<span><%- __tr("Continue_with") %> Google</span>
					</a>
				</div>
			</div>
		</div>

		<h3 class="center">Or go <a href="/">home</a>.</p>
		
</div>