<div class="auth_form form_block">
		
        <h1>Reset</h1>
        
		<div class="row flx">

			<div class="col-md-6 col-md-offset-3">

				<form class="validation" action="/action/reset/<%-token%>" method="post">

					<% if (message.length > 0) { %>
						<div class="alert alert-danger"><%= message %></div>
					<% } %>

					<div class="form-group">
                        <label>New Password</label>
                        <input required type="password" data-rule-minlength="6" class="form-control" name="password">
                    </div>
					
					<div class="center">
						<input type="submit" value="Login" />
					</div>
				</form>
			</div>
		</div>

		<h3 class="center">Or go <a href="/">home</a>.</p>
		
</div>